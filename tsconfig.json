{
  "references": [],
  "compilerOptions": {
    // 使用 Vite 开发时，引入 vite/client 类型
    "types": ["vite/client"],
    // 使用 Node 的模块解析策略
    "moduleResolution": "Node",
    // 允许解析 JSON 模块
    "resolveJsonModule": true,
    // 允许使用合成默认导入
    "allowSyntheticDefaultImports": true,
    // 使用 ESNext 作为模块规范
    "module": "ESNext",
    // 设置基础路径为当前目录
    "baseUrl": "./",
    // 定义路径别名，@/* 指向 src/* 和根目录下的 .json 文件
    "paths": {
      "@/*": ["src/*", "*.json"]
    },
    // 保留 JSX 格式
    "jsx": "preserve"
  },
  // 指定需要编译的文件
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "build/**/*.ts",
    "build/**/*.d.ts",
    "vite.config.ts",
    "src/**/*.json",
  ],
  // 排除不需要编译的文件
  "exclude": ["node_modules", "dist", "**/*.js"]
}
